# Environment Variables for Discord Bot

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Database Configuration (shared with webapp)
DATABASE_URL=postgresql://your_database_url_here

# Webapp Integration
WEBAPP_API_URL=http://localhost:3000
WEBAPP_BOT_SECRET=your_secure_secret_for_bot_communication

# Bot Configuration
BOT_PREFIX=!
NODE_ENV=development
PORT=3001

# Logging
LOG_LEVEL=info

# Server Encryption (for multi-tenant data isolation)
ENCRYPTION_KEY=your_32_character_encryption_key_here